<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/custom_listview_row_item_icon"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:contentDescription="Receipt Thumbnail"
        android:background="@mipmap/ic_default_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/custom_listview_row_item_receipt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/custom_listview_row_item_icon"
        android:paddingBottom="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/custom_listview_row_item_receipt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_listview_row_item_receipt_title"
        android:layout_toRightOf="@+id/custom_listview_row_item_icon"
        android:paddingLeft="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/custom_listview_row_item_receipt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_listview_row_item_receipt_date"
        android:layout_toRightOf="@+id/custom_listview_row_item_icon"
        android:paddingLeft="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/custom_listview_row_item_receipt_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_listview_row_item_receipt_location"
        android:layout_toRightOf="@+id/custom_listview_row_item_icon"
        android:paddingLeft="10dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/custom_listview_row_item_receipt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_listview_row_item_receipt_category"
        android:layout_toRightOf="@+id/custom_listview_row_item_icon"
        android:paddingLeft="10dp"
        android:textSize="14dp" />


</RelativeLayout>