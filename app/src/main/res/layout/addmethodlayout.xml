<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/addMethodLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<EditText
    android:id="@+id/addMethodBox"
    android:hint="Enter the Method to be added here"
    android:inputType="text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/addSomethingListview"
        android:layout_width="wrap_content"
        android:layout_height="200dp">

    </ListView>

    <Button
        android:id="@+id/addSomethingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/removeSomethingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove" />

</LinearLayout>