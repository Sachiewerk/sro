<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/levelOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">
    <Toolbar
        android:id="@+id/settingsToolBar"
        android:title="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Toolbar>


    <LinearLayout
        android:id="@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/topLeft"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:gravity="start"
            android:orientation="vertical">


            <Button
                android:id="@+id/addLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Location" />

            <Button
                android:id="@+id/addMethodButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Payment" />

            <Button
                android:id="@+id/addCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Category" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="end"
            android:orientation="vertical">

            <ListView
                android:id="@+id/LocationDisplay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp" />

            <ListView
                android:id="@+id/CategoryDisplay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp" />


            <ListView
                android:id="@+id/MethodDisplay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </LinearLayout>


    <Spinner
        android:id="@+id/userChoiceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    </Spinner>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Back" />
    <TextView
        android:id="@+id/sortByTextView"
        android:layout_gravity="left"
        android:text="Sort By"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/spinnerLabel"
        android:text="Receipt Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>