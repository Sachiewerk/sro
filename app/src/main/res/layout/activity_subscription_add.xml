<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscription_add_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/photo_receipt_add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            app:titleTextColor="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/subscription_add_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/activity_subscription_add_title_text"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/photo_receipt_add_receipt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_receipt_add_toolbar"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="@dimen/main_app_title_text_size" />

        <TextView
            android:id="@+id/photo_receipt_add_textview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_receipt_add_receipt_title"
            android:text="Date:"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />




        <ScrollView
            android:id="@+id/subscription_add_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_receipt_add_textview_date"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subcription_add_textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_edittext_title"
                    android:text="Title:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/subscription_add_edittext_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_textview_title"
                    android:inputType="text"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/subscritpion_add_textview_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_edittext_title"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_location"
                    android:text="Location:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/subscription_add_autoCompleteTextview_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscritpion_add_textview_location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/subscritpion_add_textview_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_autoCompleteTextview_location"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_price"
                    android:text="Price:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/subscritpion_add_autoCompleteTextview_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscritpion_add_textview_price"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/subscription_add_textview_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscritpion_add_autoCompleteTextview_price"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_category"
                    android:text="Category:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/subscription_add_autoCompleteTextview_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_textview_category"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/subcription_add_textview_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_autoCompleteTextview_category"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_method"
                    android:text="Payment Method:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/subcription_add_autoCompleteTextview_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_textview_method"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />
                <TextView
                    android:id="@+id/subcription_add_textview_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_autoCompleteTextview_method"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_startdate"
                    android:text="Start date:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/subcription_add_autoCompleteTextview_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_textview_startdate"
                    android:hint="Enter start date here."
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/subcription_add_textview_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_autoCompleteTextview_startdate"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_enddate"
                    android:text="End date:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/subcription_add_autoCompleteTextview_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_textview_enddate"
                    android:hint="Enter end date here."
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"/>

                <TextView
                    android:id="@+id/subcription_add_textview_duedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_autoCompleteTextview_enddate"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_autoCompleteTextview_duedate"
                    android:text="Due date(monthly):"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/subcription_add_autoCompleteTextview_duedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_textview_duedate"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/subscription_add_textview_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subcription_add_autoCompleteTextview_duedate"
                    android:layout_marginTop="20dp"
                    android:labelFor="@+id/subscription_add_edittext_comment"
                    android:text="Comment:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/subscription_add_edittext_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_textview_comment"
                    android:hint="Enter any comments here."
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"/>

                <Button
                    android:id="@+id/subscription_add_Button_Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/subscription_add_edittext_comment"
                    android:text="Save" />

                <Button
                    android:id="@+id/subscription_add_Button_Split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subscription_add_edittext_comment"
                    android:layout_centerInParent="true"
                    android:text="Split" />

                <Button
                    android:id="@+id/subscription_add_Button_Discard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/subscription_add_edittext_comment"
                    android:text="Discard" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
         the images above. Without transformations applied, it takes up the entire
         screen. To achieve the "zoom" animation, this view's bounds are animated
         from the bounds of the thumbnail button above, to its final laid-out
         bounds.
         -->


</FrameLayout>
